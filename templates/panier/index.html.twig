{% extends 'base.html.twig' %}



{% block MainContent %}
    <section id="page-hero" class="about-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-title text-center">
                        <h1>FITHUB <span>Panier</span></h1>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {% if items | length > 0 %}
        <table class="table">
            <thead>
            <tr>
                <th>Produit</th>
                <th>Description</th>
                <th>Marque</th>
                <th>Prix</th>
                <th>Quantit√©</th>

                <th>Totale</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
            <tr>
                <td><img src="{{ item.produit.image }}" height="100px" width="80px"></td>
                <td>{{ item.produit.description }}</td>
                <td>{{ item.produit.marque }}</td>
                <td>{{ item.produit.prix }}</td>
                <td>{{ item.quantity }}</td>
                <td>{{ item.produit.prix * item.quantity }}</td>
                <td>
                    <a href="{{ path('panier_remove',{'id':item.produit.id}) }}" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="5" class="text-right">Total:</td>
                <td>{{ total }}</td>
            </tr>
            </tfoot>
        </table>
    {% else%}
        <p>Malheureusement , c'est encore vide.</p>
    {% endif %}

{% endblock %}
